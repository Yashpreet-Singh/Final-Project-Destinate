<resources>

    <!-- Base application theme. -->

    <style name="Heading">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">@dimen/small_padding</item>

    </style>
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">40dp</item> <!-- Adjust icon size -->
        <item name="itemTextAppearance">@style/BottomNavigationTextAppearance</item>
        <item name="android:background">@drawable/bottom_nav_background</item> <!-- Custom background with curved corners -->
    </style>

    <style name="BottomNavigationTextAppearance">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
